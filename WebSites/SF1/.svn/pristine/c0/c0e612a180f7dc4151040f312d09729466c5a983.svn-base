Imports System.Data
Imports System.Data.SqlClient

Partial Class About
    Inherits System.Web.UI.Page
    Public conn As New SqlConnection(ConfigurationManager.ConnectionStrings("dbconnect").ToString)
    Dim shoprows() As String
